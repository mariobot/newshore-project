@model NewShore.Domain.DTO.TicketDetailDTO
@{
    ViewData["Title"] = "Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="tab-pane" id="details">
        <div class="row">
            <div class="col-sm-12">
                <br />
            </div>
            <div class="col-sm-4 col-lg-offset-1">
                <div class="form-group">
                    <label>Codigo Reserva</label>
                    <div class="input-group">
                        <form method="get" asp-action="SearchReserve" asp-controller="Ticket">
                            <input type="text" style="width:200px" name="FlightNumber" class="">
                            <br /><br />
                            <input type="submit" class="text-center btn btn-next btn-fill btn-info btn-wd btn-sm" value="Buscar Reserva" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                @if (Model != null)
                {
                <div class="form-group">
                    <div class="form-group">
                        <label>Reserva:</label>
                        <label class="form-control">@Model.FlightNumber</label>
                    </div>
                    <div class="form-group">
                        <label>Nombre:</label>
                        <label class="form-control">@Model.NamePasanger</label>
                    </div>
                    <div class="form-group">
                        <label>Telefono:</label>
                        <label class="form-control">@Model.PhoneNumber</label>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <label class="form-control">@Model.EmailContact</label>
                    </div>
                    <div class="form-group">
                        <label>Fecha:</label>
                        <label class="form-control">@Model.Flight.DepartureDate</label>
                    </div>
                    <div class="form-group">
                        <label>Ruta:</label>
                        <label class="form-control">@Model.Flight.DepartureStation - @Model.Flight.ArrivalStation</label>
                    </div>
                    <div class="form-group">
                        <label>Precio:</label>
                        <label class="form-control">@Model.Flight.Price - @Model.Flight.Currency</label>
                    </div>
                    <div class="form-group text-center">
                        <label>DESCARGAR RESERVA PDF:</label>
                        <a class="text-center btn btn-next btn-fill btn-info btn-wd btn-sm" asp-action="DownloadPDF" asp-controller="Ticket" asp-route-FlightNumber="@Model.FlightNumber" target="_blank" >Reserva @Model.FlightNumber</a>
                    </div>
                </div>
                }
            </div>
            <div class="col-sm-4">
                
            </div>
        </div>
    </div>



@model FlightViewModel
@{
    ViewData["Title"] = "Busqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <form method="post" asp-controller="Flight" asp-action="SearchFlight" >
        <div class="row">
            <div class="col-sm-12">
                <br />
            </div>
            <div class="col-sm-3 col-lg-offset-1">
                <div class="form-group">
                    <label>Origen</label>
                    <select class="form-control" name="Origin">
                        <option disabled="" selected="">- Origen -</option>
                        <option value="BOG">Bogotá</option>
                        <option value="MED">Medillín</option>
                        <option value="CTG">Cartagena</option>
                        <option value="PEI">Pereira</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Destino</label>
                    <select class="form-control" name="Destination">
                        <option disabled="" selected="">- Destino -</option>
                        <option value="BOG">Bogotá</option>
                        <option value="MED">Medillín</option>
                        <option value="CTG">Cartagena</option>
                        <option value="PEI">Pereira</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label>Fecha</label>
                    <div class="input-group">
                        <input type="date" class="form-control" name="From">
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label>Vuelos</label>
                    <div class="input-group">
                        <input type="submit" class="form-control btn btn-next btn-fill btn-info btn-wd btn-sm" value="Buscar">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-lg-offset-1">
                @if (Model.ListFlights != null)
                {
                <table class="table table-light table-responsive">
                    <tr>
                        <td>Destino</td>
                        <td>Origen</td>
                        <td>Fecha</td>
                        <td>Reservar</td>
                    </tr>
                    @foreach (var fly in Model.ListFlights)
                    {
                        <tr>
                            <td>@fly.ArrivalStation</td>
                            <td>@fly.DepartureStation</td>
                            <td>@fly.DepartureDate</td>
                            <td><a class="btn btn-dark">Reservar</a></td>
                        </tr>
                    }

                </table>
                }
            </div>
        </div>
    </form>
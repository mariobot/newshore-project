<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>newshore_ @ViewData["Title"]</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!--     Fonts and icons     -->
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet">

    <!-- CSS Files -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/gsdk-bootstrap-wizard.css" rel="stylesheet" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/css/demo.css" rel="stylesheet" />

</head>

<body>
    <div class="image-container set-full-height" style="background-image: url('../assets/img/wizard-boat.jpg')">
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="azzure" id="wizard">                            
                            <div class="wizard-header">
                                <h3>
                                    <b>NEWSHORE</b> AIRLINES <br>
                                    <small>Realice su busqueda y reserva de tiquetes aereos.</small>
                                </h3>
                            </div>
                            <div class="wizard-footer">
                                <div class="col-6 text-center">
                                    <a class='btn btn-next btn-fill btn-info btn-wd btn-sm' asp-action="Index" asp-controller="Flight" >Busqueda</a>
                                    <a class='btn btn-next btn-fill btn-info btn-wd btn-sm' asp-action="Index" asp-controller="Ticket">Reservaciones</a>
                                </div>                                    
                                <div class="clearfix"></div>
                            </div>
                            @RenderBody()                                             
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->

        <div class="footer">
            <div class="container">
                Realizado por <a href="http://www.github.com/mariobot" target="_blank">Mario Botero</a>. Codigo disponible en <a href="https://github.com/mariobot/newshore-project" target="_blank">GitHub.</a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>



